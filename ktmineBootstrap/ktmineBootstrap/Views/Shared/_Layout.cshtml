<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/less/bootstrap.less")" rel="stylesheet" type="text/less" />
    <link href="@Url.Content("~/Content/less/ktMINE.less")" rel="Stylesheet" type="text/less" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/less-1.2.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page row-fluid">
        <img class="offset4" src="@Url.Content("~/Content/images/ktminelogo_final_130.png")" alt="logo" />
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li><a href="/">Home</a> </li>
                        <li><a href="/Home/About">About</a> </li>
                        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Dropdown
                            <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Sub 1</a></li>
                                <li><a href="#">Sub 2</a></li>
                                <li><a href="#">Sub 3</a></li>
                                <li><a href="#">Sub 4</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="navbar-search pull-right">
                    <input type="text" class="search-query" placeholder="Search" />
                    </form>
                </div>
            </div>
        </div>
        <div id="header span12">
            <div class="row offset4" id="title">
                <h1>
                    ktMINE Application Title</h1>
            </div>
            @*<div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>*@
        </div>
        <div id="main span12">
            @RenderBody()
        </div>
        <div id="footer" class="span12">
            <div class="footbar">
                <div class="row offset4">
                    <ul class="nav nav-pills">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Company</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
            </div>
            <div class="ktTerms offset4 span11">
                <ul class="nav nav-pills">
                    <li><a href="#">Terms of Use</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                </ul>
                <div class="ktCopyright pull-right">
                    ktMINE 2012. All rights reserved.</div>
            </div>
            <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"></script>
        </div>
    </div>
</body>
</html>
